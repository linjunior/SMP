@{
    ViewBag.Title = "Entrar no Sistema";
    ViewBag.Message = "Informe suas credenciais";
}


    <div class="jumbotron" style="background-image:url('../fita.jpg'); width: 100%; height: 100%; background-size:cover;">
        <h2 style="color: white; text-shadow: black 0.1em 0.1em 0.2em">@ViewBag.Title</h2>
        <br />
        <form action="/" method="post">
            <div>
                <p><span style="color: white; text-shadow: black 0.1em 0.1em 0.2em">Email: </span><input id="email" type="text" /></p>
                <br /><br />
                <p><span style="color: white; text-shadow: black 0.1em 0.1em 0.2em">Senha: </span><input id="senha" type="password" /></p>
            </div>
            <br />
            <div>
                <input id="btnEntrar" type="button" value="Logar" />
                <input id="btnCadastrar" type="button" onclick="location.href='/Home/CadastrarAluno';" value="Novo Aluno" />
               
    <a href="/Aluno/PainelAluno" class="btn-link">Painel Aluno</a>
    <a href="/Professor/PainelProfessor" class="btn-link">Painel Professor</a>
    <a href="/Admin/PainelAdmin" class="btn-link">Painel Admin</a>
            </div>
        </form>
    </div>


