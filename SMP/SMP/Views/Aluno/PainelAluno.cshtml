@model SMP.Models.Medida

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="jumbotron" style="background-image:url('../fita.jpg'); width: 100%; height: 100%; background-size:cover;">
        <h2 style="color: white; text-shadow: black 0.1em 0.1em 0.2em">@ViewBag.Title</h2>
        <br />
        <form action="/" method="post">
            <div>
                <p><span style="color: white; text-shadow: black 0.1em 0.1em 0.2em">Peso Atual: @ViewBag.PesoAtual Kg</span></p>
                <p><span style="color: white; text-shadow: black 0.1em 0.1em 0.2em">Peso Alvo: @ViewBag.Meta Kg</span></p>
            </div>

            <div class="form-group">
                <br />
                <span style="color: white; text-shadow: black 0.1em 0.1em 0.2em">
                    @Html.LabelFor(model => model.md_medida, labelText: "Nova Medida: ", htmlAttributes: new { @class = "control-label col-md-2" })
                </span>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.md_medida, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <br /><br />
                <span style="color: white; text-shadow: black 0.1em 0.1em 0.2em">
                    @Html.LabelFor(model => model.dt_medida, labelText: "Data da Medida: ", htmlAttributes: new { @class = "control-label col-md-2" })
                </span>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.dt_medida, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                </div>
                <br />
            </div>

            <div class="form-group">
                <br />
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Enviar" class="btn btn-default" />
    
                </div>
                <br /> <br />
            </div>


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10" style="background-color:white">
                    <span style="color: Blue; text-shadow: white 0.1em 0.1em 0.2em">
                        @ViewBag.Message
                    </span>
                </div>
            </div>

            <div>
                <br /><br />
                <input id="btnGrafico" onclick="location.href='/Aluno/Grafico';" type="button" value="Evolução" />
                <input id="btnEditar" onclick="location.href='/Aluno/Notificacoes';" type="button" value="Notificações" />
                <!--<input id="btnEditar" onclick="location.href='/Home/CadastrarAluno';" type="button" value="Editar Cadastro" />
                    -->
            </div>
        </form>
    </div>
}
