@model SMP.Models.Aluno

@{
    ViewBag.Title = "Informação do Aluno";
}
<!--
Formulário de Manter Aluno    
-->
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="jumbotron" style="background-image:url('../fita.jpg'); width: 100%; height: 100%; background-size:cover;">
        <h2 style="color: white; text-shadow: black 0.1em 0.1em 0.2em">@ViewBag.Title</h2>
        <div>
            @Html.ActionLink("Voltar para o Login", "Login")
        </div>
        <br />



        <div class="form-group">
            <span style="color: white; text-shadow: black 0.1em 0.1em 0.2em">
                @Html.LabelFor(model => model.no_usuario, labelText: "Nome: ", htmlAttributes: new { @class = "control-label col-md-2" })
            </span>
            <div class="col-md-10">
                @Html.EditorFor(model => model.no_usuario, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <span style="color: white; text-shadow: black 0.1em 0.1em 0.2em">
                @Html.LabelFor(model => model.email, labelText: "E-mail: ", htmlAttributes: new { @class = "control-label col-md-2" })
            </span>
            <div class="col-md-10">
                @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <span style="color: white; text-shadow: black 0.1em 0.1em 0.2em">
                @Html.LabelFor(model => model.senha, labelText: "Senha: ", htmlAttributes: new { @class = "control-label col-md-2" })
            </span>
            <div class="col-md-10">
                @Html.EditorFor(model => model.senha, new { htmlAttributes = new { @class = "form-control", Type="password" } })
            </div>
        </div>

        <div class="form-group">
            <span style="color: white; text-shadow: black 0.1em 0.1em 0.2em">
                @Html.LabelFor(model => model.md_peso, labelText: "Peso Atual: ", htmlAttributes: new { @class = "control-label col-md-2" })
            </span>
            <div class="col-md-10">
                @Html.EditorFor(model => model.md_peso, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <span style="color: white; text-shadow: black 0.1em 0.1em 0.2em">
                @Html.LabelFor(model => model.md_meta, labelText: "Peso Alvo: ", htmlAttributes: new { @class = "control-label col-md-2" })
            </span>
            <div class="col-md-10">
                @Html.EditorFor(model => model.md_meta, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Salvar" class="btn btn-default" />
            </div>
            <div >
                <input id="btnExcluir" type="button" class="btn btn-default"  onclick="alert('Usuário excluído com sucesso')" value="Excluir" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10" style="background-color:white">
                <span style="color: Blue; text-shadow: white 0.1em 0.1em 0.2em">
                    @ViewBag.Message
                </span>
            </div>
        </div>


    </div>
}

