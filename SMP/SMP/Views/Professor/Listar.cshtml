@model IEnumerable<SMP.Models.Aluno>
@{
    ViewBag.Title = "Lista de Alunos";
}


<html>
<head>

</head>
<body>
    <br />
    <br />
    <div class="jumbotron" style="background-image:url('../fita.jpg'); width: 100%; height: 100%; background-size:cover;">

        <input id="btnCadastrar" onclick="location.href='/Professor/PainelProfessor';" type="button" value="Voltar" />

        <table class="table">
            <tr>
                <th>Nome do Aluno</th>
                <th>Meta</th>
                <th>Ultima Medida</th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.no_usuario)</td>
                    <td>@Html.DisplayFor(modelItem => item.md_meta)</td>
                    <td>@Html.DisplayFor(modelItem => item.md_peso)</td>

                </tr>
            }
        </table>

    </div>


</body>
</html>
